<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link asp-href-include="~/css/*.css" rel="stylesheet" />
</head>
<body>
    <div>
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" asp-action="Index" asp-controller="Home">HomeControl</a>
            </div>

            <!-- /.navbar-top-links -->
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu" aria-expanded="false">
                        <li>
                            <a asp-action="Index" asp-controller="Home"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a>
                        </li>

                        <li>
                            <a href="#"><i class="fa fa-bar-chart-o fa-fw"></i> Temp<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level collapse" aria-expanded="false">
                                <li>
                                    @Html.ActionLink("Aussen", "outdoor", "Temperatur")
                                </li>
                                <li>
                                    <a>Innen<span class="fa arrow"></span></a>
                                    <ul class="nav nav-third-level collapse" aria-expanded="false">
                                        <li>
                                            @Html.ActionLink("Wohnzimmer", "indoor", "Temperatur", new { @room = "livingroom" })
                                        </li>
                                        <li>
                                            @Html.ActionLink("Büro", "indoor", "Temperatur", new { @room = "office" })
                                        </li>
                                        <li>
                                            @Html.ActionLink("Küche", "indoor", "Temperatur", new { @room = "kitchen" })
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>

                        <li>
                            <a asp-action="Index" asp-controller="Light"><i class="fa fa-lightbulb-o fa-fw"></i> Licht</a>
                        </li>

                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
        <div id="page-wrapper" style="min-height: 1024px;">
            @RenderBody()
        </div>
    </div>

    <script src="~/js/jquery.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/morris.js"></script>
    <script src="~/js/raphael.js"></script>
    <script src="~/js/sb-admin-2.js"></script>
    <script src="~/js/metisMenu.js"></script>
</body>
</html>
